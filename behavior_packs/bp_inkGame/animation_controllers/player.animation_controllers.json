{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.sneaking_sensor": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [{"start_sneaking": "(query.is_sneaking == 1)"}]
                },
                "start_sneaking": {
                    "on_entry": ["@s start_sneaking"],
                    "on_exit": ["@s stop_sneaking"],
                    "transitions": [{"default": "(query.is_sneaking == 0)"}]
                }
            }
        }
    }
}